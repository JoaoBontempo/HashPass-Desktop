{
  "name": "hashpass-desktop",
  "productName": "HashPass Desktop",
  "private": false,
  "version": "1.0.0",
  "author": "HashPass",
  "description": "HashPass Desktop Module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.hashpass.desktop",
    "productName": "HashPass Desktop",
    "win": {
      "icon": "build/icons/256.ico"
    },
    "linux": {
      "icon": "build/icons"
    },
    "extraResources": [
      "src/assets"
    ],
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./dist-electron",
      "./node_modules/**/*",
      "./public/**/*",     
      "*.js"
    ],
    "directories": {
      "buildResources": "./build/icons"
    }
  },
  "dependencies": {
    "bufferutil": "^4.0.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "helmet": "^7.0.0",
    "install": "^0.13.0",
    "ip": "^1.1.8",
    "jsencrypt": "^3.3.2",
    "morgan": "^1.10.0",
    "npm": "^10.0.0",
    "papaparse": "^5.4.1",
    "utf-8-validate": "^5.0.10",
    "vue": "^3.2.47",
    "vue-i18n": "^9.3.0",
    "vue-router": "^4.0.13",
    "vue-toastification": "^2.0.0-rc.5",
    "vuetify": "^3.3.15"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@mdi/font": "^7.2.96",
    "@types/cors": "^2.8.14",
    "@types/crypto-js": "^4.1.2",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/ip": "^1.1.0",
    "@types/morgan": "^1.9.5",
    "@types/papaparse": "^5.3.8",
    "@types/ws": "^8.5.5",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.15",
    "electron": "^24.4.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.4.2"
  },
  "main": "dist-electron/main.js"
}
